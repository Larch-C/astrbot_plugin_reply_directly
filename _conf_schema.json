{
  "enable_plugin": {
    "description": "插件总开关",
    "type": "bool",
    "default": true
  },
  "sticky_reply": {
    "description": "沉浸式对话设置",
    "type": "object",
    "items": {
      "enable": {
        "description": "开启沉浸式对话功能",
        "type": "bool",
        "hint": "开启后，LLM可以通过函数工具'enable_direct_reply_once'来让机器人下次主动回复（无需@）。",
        "default": true
      }
    }
  },
  "proactive_reply": {
    "description": "主动插话设置",
    "type": "object",
    "items": {
      "enable": {
        "description": "开启主动插话功能",
        "type": "bool",
        "hint": "开启后，机器人会在自己发言后，根据一小段时间内的后续聊天内容，判断是否要主动插话。",
        "default": true
      },
      "delay_seconds": {
        "description": "延迟时间（秒）",
        "type": "int",
        "hint": "机器人发言后，等待多少秒再检查聊天记录。",
        "default": 5
      },
      "history_limit": {
        "description": "分析历史消息数量",
        "type": "int",
        "hint": "最多分析最近多少条消息来决定是否插话。",
        "default": 10
      }
    }
  }
}
