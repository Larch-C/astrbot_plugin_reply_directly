// astrbot_plugin_reply_directly/_conf_schema.json
{
  "enable_smart_direct_reply": {
    "description": "【功能一】开启智能直接回复",
    "type": "bool",
    "default": true,
    "hint": "开启后，LLM可以通过函数工具指定某个用户，在下一次发言时，机器人会直接回复他，无需@。"
  },
  "enable_proactive_analysis": {
    "description": "【功能二】开启主动聊天分析",
    "type": "bool",
    "default": true,
    "hint": "开启后，当机器人发完言，会等待一段时间，然后分析期间的聊天记录，决定是否需要主动进行补充回答。"
  },
  "proactive_analysis_delay": {
    "description": "【功能二配置】主动分析延迟（秒）",
    "type": "int",
    "default": 5,
    "hint": "机器人发言后，等待多少秒再开始分析。这个值就是你提到的5s，可以自己修改。"
  },
  "proactive_analysis_window": {
    "description": "【功能二配置】分析的聊天记录时间窗口（秒）",
    "type": "int",
    "default": 10,
    "hint": "当触发主动分析时，收集过去多少秒的聊天记录进行分析。建议大于等于延迟时间。"
  }
}
